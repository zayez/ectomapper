{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "bundler",
    "module": "preserve",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./@types", "./node_modules/@types"],
    "forceConsistentCasingInFileNames": true
  },
  "lib": [""],
  "include": ["src/**/*", "@types/**/*"],
  "exclude": ["node_modules", "test/**/*"]
}
