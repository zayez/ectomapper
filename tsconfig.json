{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./@types", "./node_modules/@types"],
    "forceConsistentCasingInFileNames": true
  },
  "lib": [""],
  "include": [
    "src/**/*",
    "tests/models",
    "tests/test.ts",
    "mapper.d.ts",
    "@types/index.d.ts"
  ],
  "exclude": ["node_modules", "**/__tests__/*", "**/*.spec.ts"]
}
